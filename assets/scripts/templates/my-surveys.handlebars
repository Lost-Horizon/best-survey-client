{{#each surveys as |survey|}}
  <div>
    <div class="card-header">
      <h5 data-id="{{survey._id}}">{{survey.question}}</h5>
      <button data-id="{{survey._id}}" id="delete-button" class="btn btn-outline-danger">Delete</button>
    </div>
    <div>
      <button data-id="{{survey._id}}" id="true-button" class="btn btn-success" type="submit">True</button>
      <button data-id="{{survey._id}}" id="false-button" class="btn btn-danger">False</button>
    </div>
    <div class="survey-responses">
      {{#each survey.responses as |response|}}
        <div class="">
          {{this.0.answer}}
        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
